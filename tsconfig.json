{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "lib": ["ES2017", "ES2015", "ES6"],
    "outDir": "./dist",
    "strict": true,
    "baseUrl": ".",
    "typeRoots": ["@types", "@types/custom.d.ts"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "include": [
    "@types/custom.d.ts",
    "src"
  ],
  "exclude": ["node_modules"]
}
